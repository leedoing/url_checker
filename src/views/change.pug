extends layouts/main

block content
    .change
        .change-form.global-form
            span CHANGE PASSWORD
            form(action=routes.change, method="post")
                if email
                    input(type="email", name="email", readonly, value=email)
                    input(type="password", name="password", placeholder="Password", required=true)
                    input(type="password", name="password2", placeholder="Verify Password", required=true)
                    input(type="submit", value="Change Password")
                if message
                    span=message
    .bg-modal
        .modal-contents#jsModalContents
            .coin= `You have ${purchase} Coin (1 Coin === 1 Month)`
            .close#jsClose ‚ùå
            form#jsAddUrlForm
                input.inputName(type="text", name="name", placeholder=`URL NAME`, required=true)#jsInputName
                input.inputUrl(type="text", name="url", placeholder=`URL File Size 10MB Limit(e.g https://google.com)`, required=true)#jsInputUrl
                input.inputMonth(type="number", name="number", placeholder=`Month`, min="1", max="12", required=true)#jsInputMonth
                a(href="#", class="button", id="jsSubmitAddBtn") Submit